<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Background -->
            <View
                android:id="@+id/viewHeader"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bg_header_profile"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil Saya"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Profile Picture Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="@id/viewHeader"
                app:layout_constraintTop_toBottomOf="@id/viewHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@color/gray_light"/>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                app:backgroundTint="@color/white"
                app:tint="@color/green_primary"
                app:fabCustomSize="36dp"
                app:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@id/cvProfilePic"
                app:layout_constraintEnd_toEndOf="@id/cvProfilePic"/>

            <!-- CARD 1: Data Diri -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cvProfilePic">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Pribadi"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Nama Lengkap"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Email"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2: Statistik Tubuh -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cardPersonal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistik Tubuh"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        
                        <!-- Age -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Usia"
                            android:layout_marginEnd="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Weight -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Berat (kg)"
                            android:layout_marginHorizontal="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Height -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Tinggi (cm)"
                            android:layout_marginStart="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Visual BMI Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_background"
                        android:padding="12dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="BMI"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvBMI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvBMIStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Normal)"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp"/>

                        <!-- BMI Bar Container -->
                        <FrameLayout
                            android:id="@+id/flBMIContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            
                            <!-- The Gradient Bar -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_bmi_gradient"
                                android:layout_gravity="center_vertical"/>

                            <!-- The Marker (Arrow/Dot) -->
                            <ImageView
                                android:id="@+id/ivBMIMarker"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_splash_logo" 
                                app:tint="@color/black"
                                android:layout_gravity="center_vertical|start"
                                android:translationX="0dp"/> 
                            <!-- Note: translationX will be set programmatically -->
                        </FrameLayout>
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3: Preferensi & Tujuan -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cardStats">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target &amp; Aktivitas"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>
                    
                    <!-- Gender Chips -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <RadioGroup
                        android:id="@+id/rgGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="Pria"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_chip_choice"
                            android:textColor="@color/selector_chip_text"
                            android:layout_marginEnd="8dp"/>
                            
                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="Wanita"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_chip_choice"
                            android:textColor="@color/selector_chip_text"
                            android:layout_marginStart="8dp"/>
                    </RadioGroup>

                    <!-- Diet Goal Chips -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tujuan"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <RadioGroup
                        android:id="@+id/rgDietGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/rbLoseWeight"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Turunkan Berat Badan"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_chip_choice"
                            android:textColor="@color/selector_chip_text"
                            android:layout_marginBottom="8dp"/>
                        
                        <RadioButton
                            android:id="@+id/rbMaintain"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Pertahankan Berat"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_chip_choice"
                            android:textColor="@color/selector_chip_text"
                            android:layout_marginBottom="8dp"/>

                        <RadioButton
                            android:id="@+id/rbGainWeight"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Naikkan Berat Badan"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_chip_choice"
                            android:textColor="@color/selector_chip_text"/>
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Target Berat (kg)"
                        android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTargetWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tingkat Aktivitas"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_rounded"
                        android:padding="4dp">
                        <Spinner
                            android:id="@+id/spActivityLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 4: Medis -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMedical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cardGoals">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kesehatan"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>
                    
                    <CheckBox
                        android:id="@+id/cbDiabetes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diabetes"/>
                    <CheckBox
                        android:id="@+id/cbHypertension"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hipertensi"/>
                    <CheckBox
                        android:id="@+id/cbCholesterol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kolesterol Tinggi"/>
                    <CheckBox
                        android:id="@+id/cbGastritis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maag/GERD"/>
                    
                     <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Alergi Makanan"
                        android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAllergies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnNutritionTargets"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="ðŸŽ¯ Cek Target Nutrisi"
                android:backgroundTint="@color/white"
                android:textColor="@color/green_primary"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardMedical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Simpan Profil"
                android:backgroundTint="@color/green_primary"
                android:textColor="@color/white"
                app:cornerRadius="28dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/btnNutritionTargets"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>