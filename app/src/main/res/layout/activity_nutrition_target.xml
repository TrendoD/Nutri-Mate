<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Nutrisi"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tetapkan tujuan nutrisi harian Anda"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="16dp"/>

            <!-- Auto Calculate Toggle -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/green_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ§® Hitung Otomatis"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_dark"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berdasarkan profil dan tujuan Anda"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchAutoCalculate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calorie Target Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Target Kalori Harian"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etCalorieTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="e.g. 2000"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kkal"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCalorieRecommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Disarankan: Berdasarkan TDEE Anda"
                        android:textSize="12sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Macronutrients Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥— Makronutrisi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="16dp"/>

                    <!-- Carbs -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karbohidrat"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/etCarbsTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 250"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gram"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/tvCarbsPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(50%)"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Protein -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/etProteinTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 100"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gram"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/tvProteinPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(20%)"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Fat -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lemak"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etFatTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 65"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gram"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/tvFatPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(30%)"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Macro Distribution Visual -->
                    <LinearLayout
                        android:id="@+id/llMacroDistribution"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_background">

                        <View
                            android:id="@+id/viewCarbsBar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:background="#FF9800"/>

                        <View
                            android:id="@+id/viewProteinBar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="#F44336"/>

                        <View
                            android:id="@+id/viewFatBar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:background="#2196F3"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#FF9800"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Karbo"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#F44336"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Protein"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#2196F3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Lemak"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Limits Card (Sugar, Sodium) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Batas Harian"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Penting untuk kondisi medis seperti Diabetes dan Hipertensi"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="16dp"/>

                    <!-- Sugar Limit -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¬ Batas Gula"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/etSugarLimit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 25"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gram"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSugarRecommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ WHO merekomendasikan &lt;25g untuk gula tambahan"
                        android:textSize="12sp"
                        android:textColor="#FF9800"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="-12dp"/>

                    <!-- Sodium Limit -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§‚ Batas Natrium"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etSodiumLimit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 2300"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mg"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSodiumRecommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Disarankan: &lt;2300mg (atau &lt;1500mg untuk hipertensi)"
                        android:textSize="12sp"
                        android:textColor="#FF9800"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Other Targets Card (Fiber, Water) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¿ Target Lainnya"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="16dp"/>

                    <!-- Fiber Target -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¾ Target Serat"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/etFiberTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 25"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gram"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Water Target -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’§ Target Air"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etWaterTarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="e.g. 2000"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ml"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/tvWaterGlasses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(8 gelas)"
                            android:textSize="12sp"
                            android:textColor="@color/teal_700"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnResetDefaults"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atur Ulang ke Default"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#757575"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnSaveTargets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Simpan Target"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>