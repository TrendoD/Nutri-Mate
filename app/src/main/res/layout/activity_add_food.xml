<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMealType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah ke Sarapan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <!-- Search Section -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari makanan (mis. Nasi Goreng)"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:transitionName="fab_transition"/>

        <!-- Filter Buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="8dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Semua"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/white"/>
                
                <Button
                    android:id="@+id/btnFilterRecent"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Baru Saja"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
                
                <Button
                    android:id="@+id/btnFilterFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Favorit"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
                
                <Button
                    android:id="@+id/btnCategoryFruit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Buah"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
                
                <Button
                    android:id="@+id/btnCategoryVegetable"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sayur"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
                
                <Button
                    android:id="@+id/btnCategoryProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Protein"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
                
                <Button
                    android:id="@+id/btnCategoryGrain"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Biji-bijian"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
                
                <Button
                    android:id="@+id/btnCategoryDairy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Produk Susu"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="8dp"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Custom Food Button -->
        <Button
            android:id="@+id/btnCreateCustomFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Buat Makanan Kustom"
            android:layout_marginBottom="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/design_default_color_primary"/>

        <!-- Results List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFoodSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:minHeight="300dp"/>

    </LinearLayout>

</ScrollView>