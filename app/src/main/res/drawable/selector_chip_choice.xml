<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/chip_selected_bg"/>
            <corners android:radius="24dp"/>
            <stroke android:width="0dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <!-- Unselected State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/chip_unselected_bg"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="@color/chip_unselected_stroke"/>
        </shape>
    </item>
</selector>